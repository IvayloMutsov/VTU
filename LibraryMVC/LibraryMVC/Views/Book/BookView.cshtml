@model IEnumerable<Book>

@await Html.PartialAsync("_BookPartial")

@{
    if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>GenreID</th>
                    <th>AuthorID</th>
                    <th>Publisher</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.ID</td>
                        <td>@b.Name</td>
                        <td>@b.Genre.Name</td>
                        <td>@b.Author.Name</td>
                        <td>@b.Publisher.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No books found.</p>
    }
}