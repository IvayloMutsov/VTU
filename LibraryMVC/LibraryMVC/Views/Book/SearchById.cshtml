@model Book
@{
    ViewData["Title"] = "Book Search";
}

<h2>Book Search Result</h2>

@if (Model == null)
{
    <p>No book found.</p>
}
else
{
    <div class="book-item-single">
        <table class="book-info-single">
            <tr>
                <th>ID</th>
                <td>@Model.ID</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>@Model.Genre.Name</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>@Model.Author.Name</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>@Model.Publisher.Name</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>@Model.YearPublished</td>
            </tr>
        </table>

        <div class="book-image-single">
            @if (!string.IsNullOrEmpty(Model.ImageFileName))
            {
                <img src="~/images/books/@Model.ImageFileName" alt="@Model.Name" />
            }
            else
            {
                <span>No image</span>
            }
        </div>
    </div>
}

<a asp-controller="Book" asp-action="BookView">📖 Back to Books</a>