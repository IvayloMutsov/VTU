@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome</h1>
<div class="home-container">
    <h1>📚 Library Management System</h1>
    <p>Select a section to continue:</p>

    <div class="section-links">
        <ul>
            <li>
                <a asp-controller="Author" asp-action="AuthorView">📚 View Authors</a>
                @await Html.PartialAsync("_AuthorPartial")
            </li>
            <li>
                <a asp-controller="Genre" asp-action="GenreView">🏷 View Genres</a>
                @await Html.PartialAsync("_GenrePartial")
            </li>
            <li>
                <a asp-controller="Book" asp-action="BookView">📖 View Books</a>
                @await Html.PartialAsync("_BookPartial")
            </li>
            <li>
                <a asp-controller="Publisher" asp-action="PublisherView">📖 View Publishers</a>
                @await Html.PartialAsync("_PublisherPartial")
            </li>
        </ul>
    </div>
</div>
