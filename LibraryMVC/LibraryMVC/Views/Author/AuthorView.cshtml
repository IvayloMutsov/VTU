@model IEnumerable<Author>

@{
    ViewData["Title"] = "Author View";
}

<div class="accordion-item">
    <a href="#" class="accordion-toggle">📚 Author actions</a>

    <div class="submenu">
        @await Html.PartialAsync("_AuthorPartial")
    </div>
</div>

@{
    if(Model.Any())
    {
        <!-- TABLE OF AUTHORS -->
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Birthdate</th>
                    <th>Nationality</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.ID</td>
                        <td>@a.Name</td>
                        <td>@a.Age</td>
                        <td>@a.BirthDate</td>
                        <td>@a.Nationality</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No authors found.</p>
    }
}
