<h2 class="welcome">Books</h2>

<!-- SEARCH -->
<form method="get" asp-controller="Book" asp-action="SearchByID">
    <input type="number" name="id" placeholder="Search by ID" required />
    <button type="submit" class="btn btn-search">Search</button>
</form>

<form method="get" asp-controller="Search" asp-action="SearchBookByName">
    <input type="text" name="name" placeholder="Search by name" required />
    <button type="submit" class="btn btn-search">Search</button>
</form>

@{
    if (User.IsInRole("Admin"))
    {
        <!-- ADD -->
        <h3 class="welcome">Add Book</h3>
        <form method="post" asp-controller="Book" asp-action="AddBook" enctype="multipart/form-data">
            <input type="text" name="name" placeholder="Name" required />
            <input type="number" name="genreID" placeholder="Genre ID" required />
            <input type="number" name="authorID" placeholder="Author ID" required />
            <input type="number" name="publisherID" placeholder="Publisher ID" required />
            <input type="number" name="yearPublished" placeholder="Year published" required />
            <input type="file" name="imageFile" />
            <button type="submit" class="btn btn-add">Add</button>
        </form>

        <!-- UPDATE -->
        <h3 class="welcome">Update Book</h3>
        <form method="post" asp-controller="Book" asp-action="UpdateBook" enctype="multipart/form-data">
            <input type="number" name="id" placeholder="ID" required />
            <input type="text" name="name" placeholder="Name" />
            <input type="number" name="genreID" placeholder="Genre ID" />
            <input type="number" name="authorID" placeholder="Author ID" />
            <input type="number" name="publisherID" placeholder="Publisher ID" />
            <input type="number" name="yearPublished" placeholder="Year published" />
            <input type="file" name="imageFile" />
            <button type="submit" class="btn btn-update">Update</button>
        </form>

        <!-- DELETE -->
        <h3 class="welcome">Delete Book</h3>
        <form method="post" asp-controller="Book" asp-action="DeleteBook">
            <input type="number" name="id" placeholder="ID" required />
            <button type="submit" class="btn btn-delete">Delete</button>
        </form>
    }
}

<hr />