<h2 class="welcome">Authors</h2>

<!-- SEARCH BY ID -->
<form method="get" asp-controller="Author" asp-action="SearchByID" style="margin-bottom:20px;">
    <input type="number" name="id" placeholder="Search by ID" required />
    <button type="submit" class="btn btn-search">Search</button>
</form>

@{
    if (User.IsInRole("Admin"))
    {
        <!-- ADD AUTHOR -->
        <h3 class="welcome">Add Author</h3>
        <form method="post" asp-controller="Author" asp-action="AddAuthor">
            <input type="text" name="name" placeholder="Name" required />
            <input type="number" name="age" placeholder="Age" required />
            <input type="date" name="bd" required />
            <input type="text" name="nationality" placeholder="Nationality" required />
            <button type="submit" class="btn btn-add">Add</button>
        </form>

        <!-- UPDATE AUTHOR -->
        <h3 class="welcome">Update Author</h3>
        <form method="post" asp-controller="Author" asp-action="UpdateAuthor">
            <input type="number" name="id" placeholder="ID" required />
            <input type="text" name="name" placeholder="Name" />
            <input type="number" name="age" placeholder="Age" />
            <input type="date" name="bd" />
            <input type="text" name="nationality" placeholder="Nationality" />

            <button type="submit" class="btn btn-update">Update</button>
        </form>

        <!-- DELETE AUTHOR -->
        <h3 class="welcome">Delete Author</h3>
        <form method="post" asp-controller="Author" asp-action="DeleteAuthor">
            <input type="number" name="id" placeholder="ID" required />
            <button type="submit" class="btn btn-delete">Delete</button>
        </form>
    }
}

<hr />