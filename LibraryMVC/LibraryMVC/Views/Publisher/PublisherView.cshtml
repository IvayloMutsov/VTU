@model IEnumerable<Publisher>

@{
    ViewData["Title"] = "Publisher View";
}

<div class="accordion-item">
    <a href="#" class="accordion-toggle">🏢 Publisher actions</a>

    <div class="submenu">
        @await Html.PartialAsync("_PublisherPartial")
    </div>
</div>

@{
    if (Model.Any())
    {
        <!-- TABLE OF PUBLISHERS -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Email</th>
                    <th>Year Founded</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.ID</td>
                        <td>@p.Name</td>
                        <td>@p.City</td>
                        <td>@p.Country</td>
                        <td>@p.Email</td>
                        <td>@p.YearFounded</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No publishers found.</p>
    }
}